@model PasswordRecoveryModel
@using Nop.Web.Models.Customer;
@{

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
    ViewBag.HideMenu = "true";
}


<section class="col-main-sml mt-normal">

    <h1>@T("Account.PasswordRecovery")</h1>

    @if (!String.IsNullOrEmpty(Model.Result))
    {
        <div class="result">
            @Model.Result
        </div>
        <br /><br />
    }


    @if (!Model.DisablePasswordChanging)
    {
        using (Html.BeginForm())
        {
            <p>@T("Account.PasswordRecovery.Tooltip")</p>
            <div class="fieldset">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" }, ":")   @Html.ValidationMessageFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "email form-control", autofocus = "autofocus" })

                </div>
            </div>

            <div class="form-group">
                <div class="buttons text-right">
                    <input class="btn btn-default half-width" name="send-email" type="submit" value="@T("Account.PasswordRecovery.RecoverButton")" />
                </div>
            </div>

        }
    }

</section>


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")


}


@section Left
{
    @Html.Partial("MenuStatic")
}