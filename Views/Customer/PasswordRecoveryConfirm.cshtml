@model PasswordRecoveryConfirmModel
@using Nop.Web.Models.Customer;

@{

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
    ViewBag.HideMenu = "true";    
}


<section class="col-main-sml mt-normal">
    @*<h1>@T("Account.PasswordRecovery")</h1>*@
    @if (!String.IsNullOrEmpty(Model.Result))
    {
        <div class="result">
            @Model.Result
        </div>
        <br /><br />
        <p>
            Please click <a href="~/login">here</a> to login using your new password.
        </p>
    }

    @if (!Model.DisablePasswordChanging)
    {
        using (Html.BeginForm())
        {
            <div class="fieldset">
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" }, ":")   @Html.ValidationMessageFor(m => m.NewPassword)
                    @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", autofocus = "autofocus" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "control-label" }, ":")   @Html.ValidationMessageFor(m => m.ConfirmNewPassword)
                    @Html.EditorFor(model => model.ConfirmNewPassword, new { htmlAttributes = new { @class = "form-control", autofocus = "autofocus" } })
                </div>


            </div>

            <div class="form-group">
                <div class="buttons text-right">
                    <input class="btn btn-default half-width" name="set-password" type="submit" value="@T("Account.PasswordRecovery.ChangePasswordButton")" />
                </div>
            </div>

        }
    }



</section>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}