@model IList<ProductOverviewModel>
@{
    //Layout = "~/Views/Shared/_LayoutTwo.cshtml";
    //title
    Html.AddTitleParts(T("PageTitle.NewProducts").Text);
}
@using Nop.Web.Models.Catalog;


    <div class="container">

        @if (Model.Count > 0)
        {
            var pg_i = 0;

            <div class="row catalogue-img">
                @foreach (var product in Model)
                {
                    <div class="col-6 col-sm-6 col-md-4 col-lg-4 catalog-line">
                        @Html.Partial("_ProductBox", product)
                    </div>
                    pg_i++;
                }

                <div class="gap"></div>
            </div>
        }
        else
        {
            <p></p>
            <div class="col-main-slim mt-5">
                <h3 style="text-align:center;">
                    We are still preparing our collection.<br />
                    Stay tuned!
                </h3>
            </div>

        }

    </div>






