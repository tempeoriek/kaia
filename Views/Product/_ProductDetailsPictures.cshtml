@model ProductDetailsModel
@using Nop.Web.Models.Catalog;


@if (Model.PictureModels.Count > 0)
{
    <div class="row d-none d-lg-flex">
        <div class="col-2"></div>
        <div class="col-2 no-gutter">

            @*<nav class="col-sm-3" id="productgallery">
                    <ul class="nav nav-pills nav-stacked" data-spy="affix" data-offset-top="130">
                        <li><a href="#section1">Section 1</a></li>
                        <li><a href="#section2">Section 2</a></li>
                        <li><a href="#section3">Section 3</a></li>
                    </ul>
                </nav>*@


            <div id="productgallery" class="">
                <ul class="nav" data-spy="affix" data-offset-top="100">
                    @for (int i = 0; i < Model.PictureModels.Count; i++)
                    {
                        var css = "";
                        if (i == 0)
                        {
                            css = "selected";
                        }
                        var pic = Model.PictureModels[i];

                        <li><a href="#prodimg-@i" class="@css" data-full="@pic.FullSizeImageUrl"><img src="@pic.FullSizeImageUrl" class="img-fluid" style="max-width:93px" /></a></li>
                    }

                </ul>


            </div>

        </div>
        <div class="col-8">
            <div class="prod-images d-flex flex-column">
                @for (int i = 0; i < Model.PictureModels.Count; i++)
                {
                    var pic = Model.PictureModels[i];
                    <div><img src="@pic.FullSizeImageUrl" class="img-fluid w-100" id="prodimg-@i" /></div>
                }
            </div>


        </div>
    </div>


    @*Mobile View*@
<div id="carouselExampleIndicators" class="carousel slide d-block d-lg-none" data-ride="carousel">
    <ol class="carousel-indicators">
        @{
            var index = 1;
            foreach (var p in Model.PictureModels)
            {
                if (index == 0)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@index"></li>
                }

                index++;
            }
        }




    </ol>
    <div class="carousel-inner">
        @{ int counter = 1;

            foreach (var p in Model.PictureModels)
            {
                if (counter == 1)
                {

                    <div class="carousel-item active">
                        <img class="img-fluid" src="@p.FullSizeImageUrl" alt="@p.AlternateText" title="@p.Title" />
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="img-fluid" src="@p.FullSizeImageUrl" alt="@p.AlternateText" title="@p.Title" />
                    </div>
                }

                counter++;
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



}

