@using Nop.Core
@using Nop.Core.Domain.Common;
@using Nop.Core.Infrastructure;
@{
    var displayMiniProfiler = EngineContext.Current.Resolve<Nop.Core.Domain.StoreInformationSettings>().DisplayMiniProfilerInPublicStore;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@Html.NopTitle(true)</title>
    <meta name="description" content="@(Html.NopMetaDescription())" />
    <meta name="keywords" content="@(Html.NopMetaKeywords())" />
    <meta name="Author" content="FORBETTERTOMORROWS, flitts">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    
    @Styles.Render("~/Content/bootstrapcss")
    @Styles.Render("~/app/css")

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!--[if lt IE 10]>
      <style>.transparent { opacity: 1; }</style>
    <![endif]-->

    @Html.Partial("Head")

    @if (IsSectionDefined("RootHeaderSection"))
    {
        @RenderSection("RootHeaderSection", false)
    }

    <link href="~/favicon.ico" rel="shortcut icon">

    @if (displayMiniProfiler)
    {
        @StackExchange.Profiling.MiniProfiler.RenderIncludes();
    }

    <link rel="stylesheet" href="~/Content/fancybox/jquery.fancybox.css?v=2.1.5" type="text/css" media="screen" />

    @Scripts.Render("~/bundles/jquery")
    @Html.NopCanonicalUrls()

</head>
<body>
    <div id="body-wrapper">
        @Html.Action("JavaScriptDisabledWarning", "Common")
        @Html.Partial("OldInternetExplorerWarning")
        @Html.Action("AdminHeaderLinks", "Common")
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/bootstrapjs")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="~/Scripts/app/fancybox/jquery.fancybox.pack.js?v=2.1.5"></script>
    @Scripts.Render("~/app/script")

    @if (IsSectionDefined("RootScripts")){
        @RenderSection("RootScripts", required: false)
    }

    <script type="text/javascript">AjaxCart.init(false, '.cart-qty', '.wishlist-qty', '#flyout-cart');</script>

    @*ajax loading window*@
    <div class="ajax-loading-block-window" style="display: none;">
        <div class="loading-image">
        </div>
    </div>


